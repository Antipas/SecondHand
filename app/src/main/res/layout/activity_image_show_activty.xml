<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.client.secondhand.ImageShowActivty"
    >

    <TextView android:text="/all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_all_num"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/tv_cur_num"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="cur"
        android:id="@+id/tv_cur_num"
        android:layout_toLeftOf="@+id/tv_all_num"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vp_image"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_cur_num"/>

</RelativeLayout>
